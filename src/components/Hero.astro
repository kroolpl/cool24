---
import designerImage from '../assets/images/Designer.jpeg';
import { Image } from 'astro:assets';
---
<section class="relative min-h-screen flex items-center pt-20 bg-gradient-to-b from-sky-50 to-cyan-100 overflow-hidden">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 z-0">
    <Image
      src={designerImage}
      alt="Office interior design"
      class="object-cover w-full h-full opacity-20"
      width={1920}
      height={1080}
    />
    <div class="absolute inset-0 bg-gradient-to-r from-sky-50/80 to-cyan-100/80 backdrop-blur-sm"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 relative z-[1]">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div data-aos="fade-right">
        <h1 class="text-4xl md:text-5xl font-bold text-sky-900 mb-6">
          Keep Your Space <span class="text-primary">Perfectly Cool</span> 24/7
        </h1>
        <div class="relative">
          <p class="text-xl text-sky-800 mb-8">
            Expert air conditioning, refrigeration, and ventilation services for hotels, restaurants, offices, and homes across London, Berkshire & Hampshire.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href="#contact" 
              class="bg-amber-500 text-white px-8 py-4 rounded-lg text-center hover:bg-amber-600 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
              Get a Free Quote
            </a>
            <a 
              href="#services" 
              class="border-2 border-sky-600 text-sky-700 px-8 py-4 rounded-lg text-center hover:bg-sky-600 hover:text-white transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
            >
              Our Services
            </a>
          </div>
        </div>
      </div>

      <!-- Image for larger screens -->
      <div class="hidden md:block" data-aos="fade-left">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-sky-400/20 to-cyan-300/20 rounded-2xl"></div>
          <Image
            src={designerImage}
            alt="Office interior design"
            class="rounded-2xl shadow-2xl object-cover w-full h-[600px]"
            width={800}
            height={600}
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    perspective: 1000px;
  }
</style>