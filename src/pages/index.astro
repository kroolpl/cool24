---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Testimonials from '../components/Testimonials.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

// Import brand logos
import logo1 from '../assets/images/logos/f22629d0e9362521532e1a0e22b1bc90.png';
import logo2 from '../assets/images/logos/pngwing.com.png';
import logo3 from '../assets/images/logos/pngegg.png';
import logo4 from '../assets/images/logos/kisspng-fujitsu-logo-toshiba-industria-elettronica-in-giap-fujitsu-inelco-hunter-ltd-5b75061f455929.1774338815343959352841.png';

const brands = [
  { name: "Mitsubishi", logo: logo1 },
  { name: "Daikin", logo: logo2 },
  { name: "Toshiba", logo: logo3 },
  { name: "Fujitsu", logo: logo4 },
];
---

<Layout title="Cooling Services 24 - Expert Air Conditioning & Refrigeration Services">
  <Header />
  <main>
    <Hero />
    
    <!-- Brands Section -->
    <section class="py-16 bg-gradient-to-b from-white to-sky-50/50">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-12" data-aos="fade-up">
          <h2 class="text-3xl font-bold text-sky-900 mb-4">
            Trusted by Leading Manufacturers
          </h2>
          <p class="text-lg text-sky-700/80">
            We are certified installers of the world's most reliable air conditioning brands
          </p>
        </div>
        
        <div 
          class="relative max-w-5xl mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          <!-- Background decorative elements -->
          <div class="absolute inset-0 bg-white/50 backdrop-blur-sm rounded-2xl shadow-lg -m-6"></div>
          <div class="absolute inset-0 bg-gradient-to-r from-sky-100/20 to-cyan-100/20 rounded-2xl"></div>
          
          <!-- Brands grid -->
          <div class="relative grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center p-8 rounded-2xl">
            {brands.map((brand, index) => (
              <div 
                class="w-full max-w-[180px] h-20 flex items-center justify-center group"
                data-aos="fade-up"
                data-aos-delay={index * 100}
              >
                <div class="relative w-full h-full p-4 transition-all duration-300 hover:scale-110">
                  <div class="absolute inset-0 bg-white rounded-xl shadow-sm opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  <Image
                    src={brand.logo}
                    alt={`${brand.name} logo`}
                    class="relative object-contain w-full h-full grayscale group-hover:grayscale-0 transition-all duration-300"
                    width={180}
                    height={80}
                  />
                </div>
              </div>
            ))}
          </div>
        </div>

        <div class="mt-12 text-center" data-aos="fade-up" data-aos-delay="300">
          <p class="text-sky-600 font-medium">
            Official warranty provided on all installations
          </p>
        </div>
      </div>
    </section>

    <Services />
    <Testimonials />
    <Contact />
  </main>
  <Footer />
</Layout>